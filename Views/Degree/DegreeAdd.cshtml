@model DegreeModel;

@{
    ViewData["Title"] = "Alta de Carrera";
}

<div class="text-center">
    <h1 class="display-4">Alta de Carrera</h1>
</div>

<div asp-validation-summary="All" class="text-danger"></div> 

<form asp-asp-controller="Degree" asp-action="DegreeAdd">
  <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <div class="form-text">Escribir el nombre de la carrera</div>
  </div>

  <button type="submit" class="btn btn-primary">Guardar</button>
  <a class="btn btn-secundary" asp-action="DegreeList" asp-controller="Degree">Regresar</a>
</form>
