@model IEnumerable<DegreeModel>

@{
    ViewData["Title"] = "Lista de Carreras";
}

<div class="text-center">
    <h1 class="display-4">Lista de Carreras</h1>

    <a asp-controller="Degree" asp-action="DegreeAdd" class="btn btn-primary mb-3" >Agregar Carrera</a>
    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>

<table class="table">
      <thead>
          <tr>
              <th>Acciones</th>
              <th>Nombre</th>
          </tr>
      </thead>
      <tbody >
        @foreach (var degree in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@degree.Id" class="ids" />
                    <a class="btn btn-primary" asp-controller="Degree" asp-action="DegreeEdit" asp-route-id="@degree.Id">Editar</a>
                    <a class="btn btn-danger" asp-controller="Degree" asp-action="DegreeShowToDeleted" asp-route-id="@degree.Id">Borrar</a>
                </td>
                <td>
                    @degree.Nombre
                </td>

            </tr>
        }
    </tbody>
  </table>
